@model SaltedButterWebsite.ViewModel.SaltedButterViewModel

<div class="modal">
	<div class="modal-header">
        <h3>@Model.Name</h3>
        <div id="place-adress">
            @Html.Raw(Model.AddressText)
        </div>
    </div>
    <div class="modal-body">
        <div id="status">
            <i class="@(Model.Status == "True" ? "icon-ok-sign" : "icon-minus-sign")"></i>
            @(Model.Status == "True" ? "Adresse recommendable (avec beurre salé)" : "Adresse peu recommendable (sans beurre salé)")
        </div>
        <div id="photo"></div>
        <div id="comment">@Model.Comment</div>
    </div>
    <div class="modal-footer">
        <span id="author">Par @Model.UserName il y a @Model.Interval</span>
    </div>
</div>
                