@model SaltedButterWebsite.ViewModel.SaltedButterViewModel

<div class="modal">    
	<div class="modal-header">
        <a href="#" class="close" data-dismiss="alert">×</a>
        <h3>@Model.Name</h3>
        <div id="place-address">
            @Html.Raw(Model.AddressText)
        </div>
    </div>
    <div class="modal-body">
        <div id="status">
            <i class="@(Model.Status == "True" ? "icon-thumbs-up" : "icon-thumbs-down")"></i>
            @(Model.Status == "True" ? "Adresse recommendable (avec beurre salé)" : "Adresse peu recommendable (sans beurre salé)")
        </div>
        <div id="photo"></div>
        @if (!string.IsNullOrWhiteSpace(Model.Comment))
        {
            <div id="comment">@Model.Comment</div>
        }
    </div>
    <div class="modal-footer">
        <div id="author">Par @Model.UserName il y a @Model.Interval</div>
    </div>
</div>
        